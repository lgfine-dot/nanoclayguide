{{ printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {{- range .Data.Pages }}
  {{- if not (eq .RelPermalink "/admin/") }}
  <url>
    <loc>{{ .Permalink }}</loc>
    {{- if not .Lastmod.IsZero }}
    <lastmod>{{ .Lastmod.Format "2006-01-02T15:04:05-07:00" | safeHTML }}</lastmod>
    {{- end }}
    <changefreq>{{ if .IsHome }}daily{{ else if .IsSection }}weekly{{ else }}monthly{{ end }}</changefreq>
    <priority>{{ if .IsHome }}1.0{{ else if and .IsSection (eq .Section "pillars") }}0.8{{ else if .IsSection }}0.7{{ else if and .IsPage (eq .Section "blog") }}0.6{{ else }}0.4{{ end }}</priority>
  </url>
  {{- end }}
  {{- end }}
</urlset>
